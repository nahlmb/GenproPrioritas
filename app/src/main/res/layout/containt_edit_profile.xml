                    android:background="@color/transparant"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
