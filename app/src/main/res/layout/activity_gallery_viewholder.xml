<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    tools:context=".drawer.gallery.GalleryAdapter"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_gallery"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:background="@color/abu_muda"
                android:scaleType="centerCrop"
                android:layout_height="230dp" />

            <TextView
                android:id="@+id/tv_tanggal"
                android:layout_alignBottom="@id/img_gallery"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="13dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:text="ini tanggal"
                android:lines="1"
                android:background="@drawable/background_gallery3"
                android:layout_width="80dp"
                android:layout_height="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_alignBottom="@id/img_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="@drawable/background_gallery1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/background_gallery2"/>

            <TextView
                android:id="@+id/tv_judul"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ini nanti bakalan berubah"/>

        </RelativeLayout>
        
    </LinearLayout>

</LinearLayout>