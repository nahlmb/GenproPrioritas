<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swlayout_profile"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@color/black"
                    app:layout_constraintTop_toTopOf="parent"/>

                <LinearLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/profile_bg"
                        android:layout_height="wrap_content">

                        <ImageView
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="304dp"
                            android:background="@color/abu_muda"
                            android:scaleType="centerCrop"
                            android:layout_marginTop="12dp"/>

                        <ImageView
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="75dp"
                            android:layout_height="57dp"
                            android:background="@drawable/genpro_logo_white_gp"
                            android:scaleType="centerCrop"
                            android:layout_marginTop="12dp"/>

                        <ImageView
                            android:id="@+id/img_profile_pic"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="304dp"
                            android:background="@color/transparant"
                            android:scaleType="centerCrop"
                            android:layout_marginTop="12dp"/>

                    </android.support.constraint.ConstraintLayout>


                    <TextView
                        android:id="@+id/txt_profile_nama_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:text="@string/example_user_name"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_profile_email_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/example_user_email"
                        android:textSize="14dp"
                        android:layout_below="@+id/txt_profile_nama_user"
                        android:textColor="@color/black"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:background="@color/gold"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:layout_marginTop="6dp"/>

                    <android.support.v7.widget.CardView
                        android:layout_marginTop="32dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/black"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="32dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/profile_umum"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/txt_profile_umum_1"
                                android:layout_marginTop="18dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/profile_anggota_text"
                                android:textColor="@color/white"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/txt_profile_umum_2"
                                android:layout_marginTop="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/profile_anggota_text"
                                android:textColor="@color/white"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/txt_profile_umum_3"
                                android:layout_marginTop="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/profile_anggota_text"
                                android:textColor="@color/white"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/txt_profile_umum_4"
                                android:layout_marginTop="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/profile_anggota_text"
                                android:textColor="@color/white"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/txt_profile_umum_5"
                                android:layout_marginTop="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/profile_anggota_text"
                                android:textColor="@color/white"
                                android:textSize="14sp"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_marginTop="32dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/black"
                        app:cardCornerRadius="5dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="32dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/profile_domisili"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"/>

                            <TextView
