<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".membership.MembershipActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_membership"
            android:layout_marginHorizontal="10dp"
            android:layout_width="100dp"
            android:src="@drawable/ic_profile"
            android:layout_height="100dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/id_membership"
                android:paddingLeft="10dp"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ID : 3201000001"/>

            <TextView
                android:id="@+id/namdep_membership"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:layout_height="wrap_content"
                android:text="Jaja edit"/>

            <TextView
                android:id="@+id/nambel_membership"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:layout_height="wrap_content"
                android:text="Suparja"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>